<div class="ui-eduvidual block_eduvidual manage_bunch">
    <div class="hide-on-print">{{#str}} manage:profile:clickusername, block_eduvidual {{/str}}</div>
    <div class="hide-on-print grid-eq-2">
        <div>
            <a href="#" onclick="window.print();" class="btn btn-primary btn-block">
                {{#pix}} /t/print, core {{/pix}}
                {{#str}} print, block_eduvidual {{/str}}
            </a>
        </div>
        <div>
            <a href="#" onclick="require(['block_eduvidual/manager'], function(M) { M.exportUserPopup('{{orgid}}', '{{exportuserids}}'); }); return false;" class="btn btn-primary">
                {{#pix}} /i/export, core {{/pix}}
                {{#str}} export, block_eduvidual {{/str}}
            </a>
        </div>
    </div>

    <!-- <div style="width: 100%;"> -->
        {{#format_list}}
        <table class="generaltable">
            <thead>
                <tr>
                    <th>{{#str}} username {{/str}}</th>
                    <th>{{#str}} firstname {{/str}}</th>
                    <th>{{#str}} lastname {{/str}}</th>
                    <th>{{#str}} email {{/str}}</th>
                    <th>{{#str}} secret, block_eduvidual {{/str}}</th>
                    <th>{{#str}} role {{/str}}</th>
                </tr>
            </thead>
            <tbody>
        {{/format_list}}

        {{#users}}
            {{#format_cards}}
            <div class="item" style="display: inline-block; background-image: url({{backgroundcard}})">
                <div class="name">
                    <div class="firstname">{{firstname}}</div>
                    <div class="lastname">{{lastname}}</div>
                </div>
                <div class="username">
                    <a href="#" style="text-decoration: none; color: unset;"
                        onclick="require(['block_eduvidual/manager'], function(M) { M.editProfile({{orgid}}, {{id}}, { run: function() { top.location.reload(); } }); }); return false;">
                        {{username}}
                    </a>
                </div>
                <div class="contact">{{email}}</div>
                <div class="header">{{#str}} Accesscard, block_eduvidual {{/str}}</div>
                <div class="avatar">
                    {{{userpicture}}}
                </div>
                <!--
                <div class="qr">
                    <img src="{{wwwroot}}/blocks/eduvidual/pix/qr.php?txt={{secret_encoded}}" alt="QR" />
                </div>
            -->
                <div class="secret" style="display: flex; align-items: flex-end; justify-content: flex-end;">
                    <span class="uid">{{id}}</span>
                    <span class="hash">#</span>
                    <span class="tan">{{profile_field_secret}}</span>
                </div>
                <div class="roles">{{role}}</div>
            </div>
            {{#pagebreakafter}}
            <div class="page-break">&nbsp;</div>
            {{/pagebreakafter}}
            {{/format_cards}}
            {{#format_list}}
            <tr>
                <td>
                    <a href="#" style="text-decoration: none; color: unset;"
                        onclick="require(['block_eduvidual/manager'], function(M) { M.editProfile({{orgid}}, {{id}}, { run: function() { top.location.reload(); } }); }); return false;">
                        {{username}}
                    </a>
                </td>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{email}}</td>
                <td>{{id}}#{{profile_field_secret}}</td>
                <td>{{role}}</td>

            </tr>
            {{/format_list}}
        {{/users}}
        {{#format_list}}
            </tbody>
        </table>
        {{/format_list}}
    <!-- </div> -->
</div>
