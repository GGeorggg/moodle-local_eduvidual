<h4>{{#str}} admin:questioncategories:title, local_eduvidual {{/str}}</h4>
<p>{{#str}} admin:questioncategories:description, local_eduvidual {{/str}}</p>
<ul>
{{#questioncategories}}
    <li>
        <label>
            <input type="checkbox" name="questioncategories[]" value="{{catid}}"{{checked}}
                   onclick="var inp = this; require(['local_eduvidual/admin'], function(ADMIN) { ADMIN.questioncategories(inp); });">
            {{name}}
        </label>
    </li>
{{/questioncategories}}
</ul>
