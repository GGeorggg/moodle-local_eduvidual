<h4>{{#str}} bufferedmode:title, block_eduvidual {{/str}}</h4>
<p>{{#str}} bufferedmode:description, block_eduvidual {{/str}}</p>
{{#bufferedmodeon}}
    <p class="alert alert-success">
        {{#str}} bufferedmode:isenabled, block_eduvidual {{/str}}
        <input type="button" class="ui-btn" value="{{#str}} bufferedmode:disable, block_eduvidual {{/str}}"
            onclick="top.location.href = '{{wwwroot}}/blocks/eduvidual/pages/admin.php?act=bufferedmode&bufferedmode=-1';" />
    </p>
{{/bufferedmodeon}}
{{^bufferedmodeon}}
    <p class="alert alert-danger">
        {{#str}} bufferedmode:isdisabled, block_eduvidual {{/str}}
        <input type="button" class="ui-btn" value="{{#str}} bufferedmode:enable, block_eduvidual {{/str}}"
            onclick="top.location.href = '{{wwwroot}}/blocks/eduvidual/pages/admin.php?act=bufferedmode&bufferedmode=1';" />
    </p>
{{/bufferedmodeon}}

<h5>{{#str}} bufferedmode:requirecapability, block_eduvidual {{/str}}</h5>
<p>{{#str}} bufferedmode:requirecapability:description, block_eduvidual {{/str}}</p>
<select id="block_eduvidual_admin_requirecapability" data-role="slider" onchange="var sel = this; require(['block_eduvidual/admin'], function(ADMIN) { ADMIN.requireCapability(sel.value); });">
  <option value="0">{{#str}} no, core {{/str}}</option>
  <option value="1" {{#requiredcapability}} selected="selected" {{/requiredcapability}}>{{#str}} yes, core {{/str}}</option>
</select>

<h5>{{#str}} bufferedmode:modifylogin, block_eduvidual {{/str}}</h5>
<select id="block_eduvidual_admin_requirecapability" data-role="slider" onchange="var sel = this; require(['block_eduvidual/admin'], function(ADMIN) { ADMIN.modifylogin(sel.value); });">
  <option value="0">{{#str}} no, core {{/str}}</option>
  <option value="1" {{#modifylogin}} selected="selected" {{/modifylogin}}>{{#str}} yes, core {{/str}}</option>
</select>
