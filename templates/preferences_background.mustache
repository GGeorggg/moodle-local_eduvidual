<div class="local_eduvidual preferences_background card">
    <h3>
        {{#str}} preferences:selectbg:title, local_eduvidual {{/str}}
    </h3>
    <p>
        {{#str}} preferences:selectbg:description, local_eduvidual {{/str}}
    </p>
    <div id="local_eduvidual_preferences_background">
        <span {{#noneactive}} class="active"{{/noneactive}}>
            <a style="background-image: url({{wwwroot}}/local/eduvidual/pix/bg_strikethrough.svg);" href="#" data-image="none"
                onclick="var a = this; require(['local_eduvidual/preferences'], function(P) { P.setBackground(a); });">
                &nbsp;
            </a>
        </span>
        <span {{#coloractive}} class="active"{{/coloractive}}>
            <input type="color" value="{{coloractive}}"
                style="width: 100%; height: 100%; margin: -1px auto;"
                onchange="var a = this; require(['local_eduvidual/preferences'], function(P) { P.setBackground(a); });" />
        </span>

        {{#options}}
            <span {{#active}} class="active"{{/active}}>
                <a style="background-image: url({{url}});" href="#"
                    onclick="var a = this; require(['local_eduvidual/preferences'], function(P) { P.setBackground(a); });">
                    &nbsp;
                </a>
            </span>
        {{/options}}
    </div>
</div>
