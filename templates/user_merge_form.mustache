<p>{{#str}} user:merge_accounts:description, local_eduvidual {{/str}}</p>

<form action="" enctype="multipart/form-data" method="POST">
    <div class="row">
        <div class="col-md-1">
            {{#str}} email {{/str}}
        </div>
        <div class="col-md-8">
            <input type="email" name="mail" value="{{mail}}" placeholder="{{#str}} email {{/str}}" />
        </div>
    </div>

    {{#mail}}
        <div class="row">
            <div class="col-md-1">
                {{#str}} user:merge_accounts:code, local_eduvidual {{/str}}
            </div>
            <div class="col-md-8">
                <input type="text" name="code" value="{{code}}" placeholder="{{#str}} user:merge_accounts:code, local_eduvidual {{/str}}" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-8">
                <input type="submit" class="btn btn-primary" value="{{#str}} user:merge_accounts:merge, local_eduvidual {{/str}}" />
            </div>
        </div>
    {{/mail}}
    {{^mail}}
        <div class="row">
            <div class="col-md-1">

            </div>
            <div class="col-md-8">
                <input type="submit" class="btn btn-primary" value="{{#str}} user:merge_accounts:sendcode, local_eduvidual {{/str}}" />
            </div>
        </div>
    {{/mail}}
</form>
