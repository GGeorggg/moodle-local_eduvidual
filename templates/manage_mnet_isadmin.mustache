<div class="ui-eduvidual">
    <p class="alert alert-warning">{{#str}} manage:mnet:adminonly, block_eduvidual {{/str}}</p>

    <h5>{{#str}} manage:maildomain, block_eduvidual {{/str}}</h5>
    <p>{{#str}} manage:maildomain:description, block_eduvidual {{/str}}</p>
    <label for="block_eduvidual_manage_maildomain">{{#str}} Student, block_eduvidual {{/str}}</label>
    <input id="block_eduvidual_manage_maildomain" value="{{maildomain}}"
           onkeyup="var inp = this; require(['block_eduvidual/manager'], function(MANAGER) { MANAGER.maildomain(inp, {{orgid}}, ''); });" />
    <label for="block_eduvidual_manage_maildomain_teacher">{{#str}} Teacher, block_eduvidual {{/str}}</label>
    <input id="block_eduvidual_manage_maildomain_teacher" value="{{maildomainteacher}}"
           onkeyup="var inp = this; require(['block_eduvidual/manager'], function(MANAGER) { MANAGER.maildomain(inp, {{orgid}}, 'teacher'); });" />

    <h5>{{#str}} manage:mnet, block_eduvidual {{/str}}</h5>
</div>
