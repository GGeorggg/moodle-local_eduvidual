<h4>{{#str}} explevel:title, block_eduvidual {{/str}}</h4>
<p>{{#str}} explevel:description, block_eduvidual {{/str}}</p>
<p>{{#str}} explevel:select, block_eduvidual {{/str}}</p>
<ul>
{{#moolevels}}
    <li>
        <label>
            <input type="checkbox" name="moolevels[]" value="{{roleid}}"{{checked}}
                   onclick="var inp = this; require(['block_eduvidual/admin'], function(ADMIN) { ADMIN.moolevels(inp); });">
           {{name}} ({{roleid}})
       </label>
   </li>
{{/moolevels}}
</ul>
<p>{{#str}} admin:formmodificator:description, block_eduvidual {{/str}}</p>
<p>{{#str}} admin:formmodificator:removenotice, block_eduvidual {{/str}}</p>
<form method="POST" action="" enctype="multipart/form-data">
<table width="100%" class="generaltable">
    <tr>
        <th width="80">{{#str}} admin:formmodificator:types, block_eduvidual {{/str}}</th>
        <th width="80">{{#str}} admin:formmodificator:roleids, block_eduvidual {{/str}}</th>
        <th>{{#str}} admin:formmodificator:ids_to_hide, block_eduvidual {{/str}}</th>
        <th>{{#str}} admin:formmodificator:ids_to_set, block_eduvidual {{/str}}</th>
    </tr>
{{#formmodificators}}
    <tr>
        <td valign="top"><input type="text" name="formmodificator_types[{{id}}]" value="{{types}}" /></td>
        <td valign="top"><input type="text" name="formmodificator_roleids[{{id}}]" value="{{roleids}}" /></td>
        <td valign="top"><textarea name="formmodificator_ids_to_hide[{{id}}]">{{ids_to_hide}}</textarea></td>
        <td valign="top"><textarea name="formmodificator_ids_to_set[{{id}}]">{{ids_to_set}}</textarea></td>
    </tr>
{{/formmodificators}}
    <tr>
        <td valign="top"><input type="text" name="formmodificator_types[{{idnext}}]" value="" /></td>
        <td valign="top"><input type="text" name="formmodificator_roleids[{{idnext}}]" value="" /></td>
        <td valign="top"><textarea name="formmodificator_ids_to_hide[{{idnext}}]"></textarea></td>
        <td valign="top"><textarea name="formmodificator_ids_to_set[{{idnext}}]"></textarea></td>
    </tr>
    <tr>
        <td colspan="4"><input type="submit" value="{{#str}} submit {{/str}}" /></td>
    </tr>
</table>
</form>

<h4>{{#str}} admin:questioncategories:title, block_eduvidual {{/str}}</h4>
<p>{{#str}} admin:questioncategories:description, block_eduvidual {{/str}}</p>
<ul>
{{#questioncategories}}
    <li>
        <label>
            <input type="checkbox" name="questioncategories[]" value="{{catid}}"{{checked}}
                   onclick="var inp = this; require(['block_eduvidual/admin'], function(ADMIN) { ADMIN.questioncategories(inp); });">
            {{name}}
        </label>
    </li>
{{/questioncategories}}
</ul>
